{
  "manifest_version": 3,
  "name": "SheetLink: Sync Bank Transactions to Google Sheets",
  "short_name": "SheetLink",
  "version": "0.5.1",
  "description": "SheetLink syncs real bank transactions directly into Google Sheets. Powered by Plaid. Privacy-first. Free for 7 days of history.",
  "icons": {
    "16": "icons/sheetlink-16.png",
    "32": "icons/sheetlink-32.png",
    "48": "icons/sheetlink-48.png",
    "128": "icons/sheetlink-128.png"
  },
  "permissions": [
    "identity",
    "storage",
    "alarms"
  ],
  "oauth2": {
    "client_id": "967710910027-qq2tuel7vsi2i06h4h096hbvok8kfmhk.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets",
      "https://www.googleapis.com/auth/drive.file",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/script.projects"
    ]
  },
  "optional_permissions": [
    "https://www.googleapis.com/auth/script.projects"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://script.googleapis.com/*",
    "https://raw.githubusercontent.com/*",
    "https://cdn.plaid.com/*",
    "https://sheetlink-production.up.railway.app/*",
    "https://api.sheetlink.app/*"
  ],
  "externally_connectable": {
    "matches": [
      "https://sheetlink.app/*",
      "http://localhost:3002/*"
    ]
  },
  "homepage_url": "https://sheetlink.app",
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "SheetLink",
    "default_icon": {
      "16": "icons/sheetlink-16.png",
      "32": "icons/sheetlink-32.png",
      "48": "icons/sheetlink-48.png"
    }
  },
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "src/service_worker.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/plaid_link.html",
        "src/plaid_link.js",
        "src/plaid-sdk.js",
        "config.js",
        "assets/brand/sheetlink-logo-horizontal.svg",
        "assets/brand/sheetlink-logo-horizontal-white.svg",
        "assets/brand/sheetlink-mark-current.svg",
        "assets/brand/sheetlink-favicon.svg",
        "assets/demo/transactions.json"
      ],
      "matches": ["https://sheetlink.app/*", "chrome-extension://*/*"]
    }
  ]
}
